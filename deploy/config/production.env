# Production Environment Configuration
NODE_ENV=production
PORT=3000

# Database Configuration
DATABASE_URL=postgresql://chainsync_user:secure_password@localhost:5432/chainsync_prod

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Security Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-32-chars-minimum
ENCRYPTION_KEY=12345678901234567890123456789012
SESSION_SECRET=your-super-secure-session-secret-32-chars-minimum

# CORS Configuration
CORS_ORIGIN=https://chainsync.example.com

# Logging Configuration
LOG_LEVEL=warn

# Monitoring Configuration
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
PROMETHEUS_PORT=9090
HEALTH_CHECK_INTERVAL=60000

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=50

# Backup Configuration
BACKUP_RETENTION_DAYS=30

# File Upload Configuration
MAX_FILE_SIZE=10485760

# SSL Configuration
SSL_ENABLED=false
SSL_CERT_PATH=/path/to/ssl/certificate.crt
SSL_KEY_PATH=/path/to/ssl/private.key

# Performance Configuration
COMPRESSION_ENABLED=true
CACHE_TTL=3600

# API Configuration
API_VERSION=v1

# Deployment Configuration
DEPLOYMENT_ID=prod-$(date +%Y%m%d-%H%M%S)
BUILD_VERSION=1.0.0
COMMIT_SHA=$(git rev-parse HEAD) 