{
  "compilerOptions": {
    "module": "Node16",
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "outDir": "dist/server",
    "rootDir": "./",
    "baseUrl": "./",
    "paths": {
      "@/": ["src/"],
      "@shared/*": ["shared/*"],
      "@server/*": ["server/*"],
      "@db": ["db/index.ts"],
      "@db/*": ["db/*"]
    },
    "moduleResolution": "node16",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "allowJs": true,
    "declaration": false,
    "types": ["node", "express", "express-session"],
    "typeRoots": ["./node_modules/@types", "./types"]
  },
  "include": [
    "src/**/*.ts",
    "server/**/*.ts",
    "shared/**/*.ts",
    "db/**/*.ts"
  ],
  "exclude": [
    "src/**/*.tsx",
    "src/App.tsx",
    "src/components",
    "client/**/*",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}