{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2020",
    "outDir": "dist/server",
    "rootDir": "src",
    "baseUrl": "./",
    "paths": {
      "@/": ["src/"]
    },
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": false,
    "strict": true
  },
  "include": ["src"]
}