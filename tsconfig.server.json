{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "dist/server",
    "rootDir": "server",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": false,
    "baseUrl": ".",
    "paths": {
      "@utils/": ["server/utils/"],
      "@services/": ["server/services/"]
    },
    "noEmitOnError": true
  },
  "include": ["server/*/"],
  "exclude": ["node_modules", "dist"]
}