{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2020",
    "outDir": "dist/server",
    "rootDir": "./",
    "baseUrl": "./",
    "paths": {
      "@/": ["src/"]
    },
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": false,
    "strict": true
  },
  "include": [
    "src/**/*.ts",
    "server/**/*.ts",
    "shared/**/*.ts",
    "db/**/*.ts"
  ],
  "exclude": [
    "src/**/*.tsx",
    "src/App.tsx",
    "src/components",
    "client/**/*",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}