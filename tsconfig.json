{
  "compilerOptions": {
    /* Base Options */
    "target": "ES2020",
    "lib": ["DOM", "DOM.Iterable", "ES2020"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "useUnknownInCatchVariables": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": false,
    "noEmit": true,
    "incremental": true,
    "tsBuildInfoFile": "./node_modules/.cache/.tsbuildinfo",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./client/src/*"],
      "@/components/*": ["./client/src/components/*"],
      "@/lib/*": ["./client/src/lib/*"],
      "@/providers/*": ["./client/src/providers/*"],
      "@/pages/*": ["./client/src/pages/*"],
      "@/hooks/*": ["./client/src/hooks/*"],
      "@/utils/*": ["./client/src/utils/*"],
      "@/types/*": ["./client/src/types/*"],
      "@db": ["./db/index.ts"],
      "@db/*": ["./db/*"],
      "@shared/*": ["./shared/*"],
      "@server/*": ["./server/*"],
      "@assets/*": ["./attached_assets/*"],
      "@config/*": ["./config/*"],
      "@middleware/*": ["./middleware/*"],
      "@scripts/*": ["./scripts/*"],
      "@deploy/*": ["./deploy/*"],
      "@docs/*": ["./docs/*"],
      "@test/*": ["./test/*"],
      "@tests/*": ["./tests/*"]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./client/src/types",
      "./types"
    ],
    "types": ["node", "express-session", "jest"]
  },
  "include": [
    "server/**/*.ts",
    "server/**/*.tsx",
    "shared/**/*.ts",
    "shared/**/*.tsx",
    "db/**/*.ts",
    "db/**/*.tsx",
    "middleware/**/*.ts",
    "middleware/**/*.tsx",
    "scripts/**/*.ts",
    "scripts/**/*.tsx",
    "deploy/**/*.ts",
    "deploy/**/*.tsx",
    "src/**/*.ts",
    "src/**/*.tsx",
    "test/**/*.ts",
    "test/**/*.tsx",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ],
  "exclude": [
    "client/**/*",
    "node_modules",
    "dist",
    "dist.bak",
    "coverage",
    "playwright-report",
    "test-results",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/__tests__/**",
    "**/__mocks__/**"
  ],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
