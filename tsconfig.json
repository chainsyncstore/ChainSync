{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "noEmit": true,
    "allowJs": false,
    "skipLibCheck": true,
    "typeRoots": [
      "./node_modules/@types",
      "./client/src/types",
      "./types"
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "client/src/paths.d.ts"
  ],
  "exclude": [
    "node_modules",
    "test",
    "tests",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/__tests__/**",
    "**/__mocks__/**",
    "dist",
    "dist.bak",
    "coverage",
    "playwright-report",
    "test-results"
  ]
}
