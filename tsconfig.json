{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "typeRoots": [
      "./node_modules/@types",
      "./client/src/types"
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    "client/src/paths.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "dist.bak",
    "node_modules.bak",
    "coverage",
    "playwright-report",
    "test-results",
    "attached_assets",
    ".git",
    "docs",
    "deploy",
    "client/src/components",
    "client/src/pages",
    "test"
  ]
}
