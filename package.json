{
  "name": "chainsync",
  "version": "1.0.0",
  "scripts": {
    "dev": "concurrently \"vite\" \"ts-node-dev --respawn --transpile-only src/index.ts\"",
    "build": "npm run build:client && npm run build:server",
    "build:client": "vite build",
    "build:server": "tsc-alias -p tsconfig.server.json && tsc -p tsconfig.server.json",
    "start": "node dist/server/index.js",
    "test": "jest"
  },
  "dependencies": {
    "express": "^4.18.2",
    "tsconfig-paths": "^4.2.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^20.4.2",
    "concurrently": "^8.0.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.0",
    "tsc-alias": "^1.8.7",
    "vite": "^5.2.0"
  }
}